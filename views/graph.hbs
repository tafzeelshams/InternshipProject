<!DOCTYPE html>
<html>
<head>
	<title>Graph Plot</title>
	<link rel="stylesheet" type="text/css" href="/style.css">
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
	<script src="https://cdn.plot.ly/plotly-latest.min.js" charset="utf-8"></script>
	<script type="text/javascript" src="/graphPlot.js"></script>
</head>
<body>
	<nav>
		<h1> Graph Plotter </h1>
		<ul>
			<li><a href="/">Home</a></li>
			<li>
					{{#if user }}
						Welcome {{user}}
					{{/if}}
			</li>
		</ul>
	</nav>
	<div id=main>
		<div id=options>
			<div class=optionsBtn>
				<button type="button" id="Live"  class = btn>Go Live</button>
				<button type="button" id="5_min" class = btn>5 min</button>
				<button type="button" id="15_min" class = btn>15 min</button>
			</div>
			<div class = optionsBtn>
				<label style="font-size: 25px"> Start Time :</label>
				<input type="datetime-local" id="startTime" name="startTime">
				<label style="font-size: 25px">End Time :</label>
				<input type="datetime-local" id="endTime" name="endTime">
				<button type="button" id="plotRange" class = btn>Plot Range</button>
			</div>
		</div>
		<div id=graphMain>
			<div id='graphDiv'>
				<script>
					
				</script>
			</div>
			<div id='tableDiv'>
				<table>
					<tr>
						<th>Time</th>
						<th>Value</th>
						<th>Action</th>
					</tr>
				</table>
			</div>
		</div>
		
	</div>
</body>
</html>